@{
    ViewData["Title"] = "ForkScore - Home";

    <!DOCTYPE html>
    <html>
    <head>
        <title>@ViewData["Title"]</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">ForkScore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                      
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown">
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Restaurant" asp-action="SearchRestaurants">Find Restaurants</a></li>
                                    <li><a class="dropdown-item" asp-controller="Reservation" asp-action="CreateReservationPage">Make Reservation</a></li>
                                    <li><a class="dropdown-item" asp-controller="Review" asp-action="CreateReview">Create Review</a></li>
                                    <li><a class="dropdown-item" asp-controller="Review" asp-action="ManageReviews">Manage Reviews</a></li>
                                    <li><a class="dropdown-item" asp-controller="Restaurant" asp-action="CreateRestaurantPage">Add Restaurant</a></li>
                                    <li><a class="dropdown-item" asp-controller="Reservation" asp-action="Manage">Manage Reservations</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Logout">Logout</a></li>
                                </ul>
                            </li>
                     
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container text-center mt-4">
            <h1>Welcome to ForkScore !</h1>
            <p>Find and review the best restaurants in your area!</p>
            <a class="btn btn-primary mt-3" asp-controller="Restaurant" asp-action="SearchRestaurants">Find Restaurant</a>
        </div>
    </body>
    </html>
}