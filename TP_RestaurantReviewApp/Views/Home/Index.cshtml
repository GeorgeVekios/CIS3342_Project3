@{
    Layout = "_Layout";
    ViewData["Title"] = "ForkScore - Home";
}

<style>
    .text-temple {
        color: #990000;
    }

    .btn-temple {
        background-color: #990000;
        color: #fff;
        border: none;
    }

    .btn-temple:hover {
        background-color: #7a0000;
        color: #fff;
    }

    .temple-card {
        background-color: #fff;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        border-radius: 0.75rem;
        padding: 2rem;
    }
</style>

<div class="container text-center mt-5 temple-card">
    <h1 class="text-temple mb-3">Welcome to ForkScore!</h1>
    <p class="fs-5">Find and review the best restaurants in your area!</p>
    <a class="btn btn-temple mt-3" asp-controller="Restaurant" asp-action="SearchRestaurants">Find Restaurant</a>
</div>
