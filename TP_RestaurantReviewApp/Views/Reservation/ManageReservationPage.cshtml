@model TP_RestaurantReviewApp.Models.ManageReservationPageViewModel
@{
    Layout = null;
    ViewData["Title"] = "ForkScore - Manage Reservation";
}
<DOCTYPE html>
    <html>
    <head>
        <title>@ViewData["Title"]</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            <h2>Edit Reservation</h2>

            @using (Html.BeginForm("ManageReservationPageViewModel", "ReservationController", FormMethod.Post))
            {
                @Html.HiddenFor(m => m.Reservation.ReservationId) <!-- Hidden field for ReservationID -->
                @Html.HiddenFor(m => m.RestaurantID) <!-- Hidden field for RestaurantID -->

                <div class="form-group">
                    @Html.LabelFor(m => m.Reservation.Name, "Name")
                    @Html.TextBoxFor(m => m.Reservation.Name, new { @class = "form-control", @Value = Model.Reservation.Name })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Reservation.PhoneNumber, "Phone Number")
                    @Html.TextBoxFor(m => m.Reservation.PhoneNumber, new { @class = "form-control", type = "tel", @Value = Model.Reservation.PhoneNumber})
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Reservation.Email, "Email")
                    @Html.TextBoxFor(m => m.Reservation.Email, new { @class = "form-control", type = "email", @Value = Model.Reservation.Email})
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Reservation.ResDT, "Reservation Date & Time")
                    @Html.TextBoxFor(m => m.Reservation.ResDT, new { @class = "form-control", type = "datetime-local", @Value = Model.Reservation.ResDT})
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Reservation.PartySize, "Party Size")
                    @Html.TextBoxFor(m => m.Reservation.PartySize, new { @class = "form-control", type = "number", @Value = Model.Reservation.PartySize})
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Reservation.Comments, "Comments")
                    @Html.TextAreaFor(m => m.Reservation.Comments, new { @class = "form-control", rows = "3", @Value = Model.Reservation.Comments})
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Update Reservation</button>
                </div>

                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="text-center">
                        <span class="text-danger">@Model.Message</span>
                    </div>
                }
            }
        </div>
    </body>
</html>
</DOCTYPE>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}

