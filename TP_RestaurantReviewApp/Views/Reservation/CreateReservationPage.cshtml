@model TP_RestaurantReviewApp.Models.CreateReservationPageViewModel
@{
    Layout = "_Layout"; // using layout
    ViewData["Title"] = "ForkScore - Create New Reservation";
}

<div class="container">
    <h2>Make a Reservation</h2>

    @using (Html.BeginForm("CreateReservationPageViewModel", "ReservationController", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.RestaurantID) <!-- Hidden field for RestaurantID -->

        <div class="form-group">
            @Html.LabelFor(m => m.Reservation.Name, "Name")
            @Html.TextBoxFor(m => m.Reservation.Name, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Reservation.PhoneNumber, "Phone Number")
            @Html.TextBoxFor(m => m.Reservation.PhoneNumber, new { @class = "form-control", type = "tel" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Reservation.Email, "Email")
            @Html.TextBoxFor(m => m.Reservation.Email, new { @class = "form-control", type = "email" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Reservation.ResDT, "Reservation Date & Time")
            @Html.TextBoxFor(m => m.Reservation.ResDT, new { @class = "form-control", type = "datetime-local" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Reservation.PartySize, "Party Size")
            @Html.TextBoxFor(m => m.Reservation.PartySize, new { @class = "form-control", type = "number" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Reservation.Comments, "Comments")
            @Html.TextAreaFor(m => m.Reservation.Comments, new { @class = "form-control", rows = "3" })
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-primary">Submit Reservation</button>
        </div>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="text-center">
                <span class="text-danger">@Model.Message</span>
            </div>
        }
    }
</div>

@section Scripts {
    <!-- Scripts are already included in _Layout.cshtml -->
    <!-- Add any page-specific scripts here if needed -->
}