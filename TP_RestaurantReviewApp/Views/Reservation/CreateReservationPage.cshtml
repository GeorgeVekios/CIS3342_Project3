@model TP_RestaurantReviewApp.Models.CreateReservationPageViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "ForkScore - Create New Reservation";
}

<style>
    .text-temple {
        color: #990000;
    }

    .btn-temple {
        background-color: #990000;
        color: #fff;
        border: none;
    }

    .btn-temple:hover {
        background-color: #7a0000;
        color: #fff;
    }

    .form-container {
        background-color: #fff;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.1);
        margin-top: 2rem;
    }

    .form-label {
        font-weight: 600;
    }

    .text-error {
        color: #dc3545;
        font-size: 0.875rem;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="form-container">
                <h2 class="text-center text-temple mb-4">
                    <i class="bi bi-calendar-check-fill me-2"></i>Make a Reservation
                </h2>

                @using (Html.BeginForm("CreateReservationPageViewModel", "ReservationController", FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.RestaurantID)

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Reservation.Name, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Reservation.Name, new { @class = "form-control", placeholder = "Enter your name" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Reservation.PhoneNumber, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Reservation.PhoneNumber, new { @class = "form-control", type = "tel", placeholder = "123-456-7890" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Reservation.Email, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Reservation.Email, new { @class = "form-control", type = "email", placeholder = "your@email.com" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Reservation.ResDT, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Reservation.ResDT, new { @class = "form-control", type = "datetime-local" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Reservation.PartySize, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Reservation.PartySize, new { @class = "form-control", type = "number", placeholder = "e.g., 4" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Reservation.Comments, new { @class = "form-label" })
                        @Html.TextAreaFor(m => m.Reservation.Comments, new { @class = "form-control", rows = 3, placeholder = "Any special requests?" })
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-temple w-100">
                            <i class="bi bi-send-check-fill me-1"></i>Submit Reservation
                        </button>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="text-center mt-3">
                            <span class="text-error">@Model.Message</span>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Scripts are already included in _Layout.cshtml -->
    <!-- Add any page-specific scripts here if needed -->
}