@model TP_RestaurantReviewApp.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<style>
    .text-temple {
        color: #990000;
    }

    .btn-temple {
        background-color: #990000;
        color: #fff;
        border: none;
    }

        .btn-temple:hover {
            background-color: #7a0000;
            color: #fff;
        }

    .btn-temple-outline {
        border: 2px solid #990000;
        color: #990000;
        background-color: #fff;
    }

        .btn-temple-outline:hover {
            background-color: #990000;
            color: #fff;
        }

    .form-container {
        background-color: #fff;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.1);
        margin-top: 3rem;
    }

    .text-error {
        color: #dc3545;
        font-size: 0.875rem;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="form-container">
            <h2 class="text-center mb-4 text-temple">
                <i class="bi bi-person-plus-fill me-2"></i>Create Account
            </h2>

            <form asp-action="Register" method="post">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <div>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p class="mb-0">@error.ErrorMessage</p>
                            }
                        </div>
                    </div>
                }

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Username" class="form-label">
                            <i class="bi bi-person-fill me-1"></i>Username
                        </label>
                        <input asp-for="Username" class="form-control" placeholder="Choose a username" />
                        <span asp-validation-for="Username" class="text-error"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label">
                            <i class="bi bi-envelope-fill me-1"></i>Email
                        </label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="your.email@example.com" />
                        <span asp-validation-for="Email" class="text-error"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FirstName" class="form-label">
                            <i class="bi bi-person-vcard me-1"></i>First Name
                        </label>
                        <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                        <span asp-validation-for="FirstName" class="text-error"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="LastName" class="form-label">
                            <i class="bi bi-person-vcard-fill me-1"></i>Last Name
                        </label>
                        <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                        <span asp-validation-for="LastName" class="text-error"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="UserType" class="form-label">
                            <i class="bi bi-person-badge-fill me-1"></i>Account Type
                        </label>
                        <select asp-for="UserType" class="form-select">
                            <option value="">Select your role</option>
                            <option value="Reviewer">Reviewer</option>
                            <option value="Restaurant Representative">Restaurant Representative</option>
                        </select>
                        <span asp-validation-for="UserType" class="text-error"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Password" class="form-label">
                            <i class="bi bi-lock-fill me-1"></i>Password
                        </label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Create a password" />
                        <span asp-validation-for="Password" class="text-error"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">
                            <i class="bi bi-lock-fill me-1"></i>Confirm Password
                        </label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm password" />
                        <span asp-validation-for="ConfirmPassword" class="text-error"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="PhoneNum" class="form-label">
                            <i class="bi bi-telephone-fill me-1"></i>Phone Number
                        </label>
                        <input asp-for="PhoneNum" class="form-control" placeholder="123-456-7890" />
                        <span asp-validation-for="PhoneNum" class="text-error"></span>
                    </div>
                </div>

                <h5 class="mt-4 mb-3 text-temple"><i class="bi bi-shield-lock-fill me-2"></i>Security Questions</h5>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SecurityQuestion1ID" class="form-label">Question 1</label>
                        <select asp-for="SecurityQuestion1ID" asp-items="Model.SecurityQuestions" class="form-select">
                            <option value="">Select a question</option>
                        </select>
                        <span asp-validation-for="SecurityQuestion1ID" class="text-error"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Answer1" class="form-label">Answer 1</label>
                        <input asp-for="Answer1" class="form-control" placeholder="Your answer" />
                        <span asp-validation-for="Answer1" class="text-error"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SecurityQuestion2ID" class="form-label">Question 2</label>
                        <select asp-for="SecurityQuestion2ID" asp-items="Model.SecurityQuestions" class="form-select">
                            <option value="">Select a question</option>
                        </select>
                        <span asp-validation-for="SecurityQuestion2ID" class="text-error"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Answer2" class="form-label">Answer 2</label>
                        <input asp-for="Answer2" class="form-control" placeholder="Your answer" />
                        <span asp-validation-for="Answer2" class="text-error"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <button type="submit" class="btn btn-temple">
                        <i class="bi bi-person-plus-fill me-1"></i>Register
                    </button>
                    <a asp-action="Login" class="btn btn-temple-outline">
                        <i class="bi bi-box-arrow-in-left me-1"></i>Back to Login
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>