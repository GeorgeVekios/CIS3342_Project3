@{
    ViewData["Title"] = "Verify Account";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="form-container">
            <h2 class="text-center mb-4">
                <i class="bi bi-patch-check-fill me-2"></i>Verify Account
            </h2>
            <form asp-action="Verify" method="post">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <div>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p class="mb-0">@error.ErrorMessage</p>
                            }
                        </div>
                    </div>
                }

                <div class="mb-3">
                    <label for="inputCode" class="form-label">
                        <i class="bi bi-key-fill me-1"></i>Verification Code
                    </label>
                    <input type="text" name="inputCode" class="form-control" placeholder="Enter 6-digit code" />
                    <span class="text-error">
                        @Html.ValidationMessage("inputCode")
                    </span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle-fill me-1"></i>Verify
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
