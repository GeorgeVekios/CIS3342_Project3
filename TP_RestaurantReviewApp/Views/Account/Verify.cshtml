@{
    ViewData["Title"] = "Verify Account";
}

<style>
    .text-temple {
        color: #990000;
    }

    .btn-temple {
        background-color: #990000;
        color: #fff;
        border: none;
    }

    .btn-temple:hover {
        background-color: #7a0000;
        color: #fff;
    }

    .form-container {
        background-color: #fff;
        border-radius: 1rem;
        padding: 2rem;
        box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.1);
        margin-top: 3rem;
    }

    .text-error {
        color: #dc3545;
        font-size: 0.875rem;
    }
</style>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="form-container">
            <h2 class="text-center mb-4 text-temple">
                <i class="bi bi-patch-check-fill me-2"></i>Verify Account
            </h2>

            <form asp-action="Verify" method="post">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <div>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p class="mb-0">@error.ErrorMessage</p>
                            }
                        </div>
                    </div>
                }

                <div class="mb-3">
                    <label for="inputCode" class="form-label">
                        <i class="bi bi-key-fill me-1"></i>Verification Code
                    </label>
                    <input type="text" name="inputCode" class="form-control" placeholder="Enter 6-digit code" />
                    <span class="text-error">
                        @Html.ValidationMessage("inputCode")
                    </span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-temple w-100">
                        <i class="bi bi-check-circle-fill me-1"></i>Verify
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
