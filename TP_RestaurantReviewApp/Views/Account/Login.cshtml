@model TP_RestaurantReviewApp.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="form-container">
            <h2 class="text-center mb-4">
                <i class="bi bi-person-circle me-2"></i>Login
            </h2>
            <form asp-action="Login" method="post">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger d-flex align-items-center" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <div>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <p class="mb-0">@error.ErrorMessage</p>
                            }
                        </div>
                    </div>
                }

                <div class="mb-3">
                    <label asp-for="Username" class="form-label">
                        <i class="bi bi-person-fill me-1"></i>Username
                    </label>
                    <input asp-for="Username" class="form-control" placeholder="Enter username" />
                    <span asp-validation-for="Username" class="text-error"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">
                        <i class="bi bi-lock-fill me-1"></i>Password
                    </label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-error"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">
                        <i class="bi bi-check-circle me-1"></i>Remember Me
                    </label>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-1"></i>Login
                    </button>
                    <a asp-action="Register" class="btn btn-outline-secondary">
                        <i class="bi bi-person-plus-fill me-1"></i>Register
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
