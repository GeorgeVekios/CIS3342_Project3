@model TP_RestaurantReviewApp.Models.ManageRestaurantPageViewModel
@{
    Layout = "_Layout"; // using layout
    ViewData["Title"] = "ForkScore - Manage Restaurant";
}

<style>
    .temple-red {
        color: #D91C2A;
    }

    .temple-white {
        color: #FFFFFF;
    }

    .temple-bg {
        background-color: #D91C2A;
    }

    .temple-border {
        border-color: #D91C2A;
    }

    .temple-header {
        background-color: #D91C2A;
        color: #FFFFFF;
        padding: 20px;
        text-align: center;
        border-radius: 5px;
    }

    .form-control-temple {
        border: 2px solid #D91C2A;
        border-radius: 4px;
        padding: 12px;
    }

    .form-label-temple {
        font-weight: bold;
        color: #D91C2A;
    }

    .btn-temple {
        background-color: #D91C2A;
        color: white;
        font-weight: bold;
    }

    .btn-temple:hover {
        background-color: #9c1a1f; /* Darker red for hover */
    }

    .card-temple {
        border: 1px solid #D91C2A;
        border-radius: 8px;
    }

    .card-header-temple {
        background-color: #D91C2A;
        color: #FFFFFF;
        font-weight: bold;
        padding: 10px;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .card-body-temple {
        background-color: #F9F9F9;
        padding: 15px;
    }
</style>

<div class="container my-5">
    <div class="temple-header">
        <h2>Edit Restaurant</h2>
    </div>

    @using (Html.BeginForm("ManageRestaurantPage", "Restaurant", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Restaurant.RestaurantID) <!-- Hidden field for RestaurantID -->
        <div class="card card-temple mb-4">
            <div class="card-header card-header-temple">
                Restaurant Name
            </div>
            <div class="card-body card-body-temple">
                <div class="form-group">
                    @Html.LabelFor(m => m.Restaurant.Name, "Restaurant Name", new { @class = "form-label-temple" })
                    @Html.TextBoxFor(m => m.Restaurant.Name, new { @class = "form-control-temple", placeholder = "Enter restaurant name" })
                </div>
            </div>
        </div>

        <div class="card card-temple mb-4">
            <div class="card-header card-header-temple">
                Address Line 1
            </div>
            <div class="card-body card-body-temple">
                <div class="form-group">
                    @Html.LabelFor(m => m.Restaurant.StreetAddress, "Street Address", new { @class = "form-label-temple" })
                    @Html.TextBoxFor(m => m.Restaurant.StreetAddress, new { @class = "form-control-temple", placeholder = "Enter street address" })
                </div>
            </div>
        </div>

        <div class="card card-temple mb-4">
            <div class="card-header card-header-temple">
                City
            </div>
            <div class="card-body card-body-temple">
                <div class="form-group">
                    @Html.LabelFor(m => m.Restaurant.City, "City", new { @class = "form-label-temple" })
                    @Html.TextBoxFor(m => m.Restaurant.City, new { @class = "form-control-temple", placeholder = "Enter city" })
                </div>
            </div>
        </div>

        <div class="card card-temple mb-4">
            <div class="card-header card-header-temple">
                State
            </div>
            <div class="card-body card-body-temple">
                <div class="form-group">
                    @Html.LabelFor(m => m.Restaurant.State, "State", new { @class = "form-label-temple" })
                    @Html.DropDownListFor(m => m.Restaurant.State, new SelectList(new[]
                             {
                new SelectListItem { Text = "PA", Value = "PA" },
                new SelectListItem { Text = "NY", Value = "NY" }
                }, "Value", "Text", Model.Restaurant.State), "Select State", new { @class = "form-select form-control-temple" })
                </div>
            </div>
        </div>

        <div class="card card-temple mb-4">
            <div class="card-header card-header-temple">
                Zip Code
            </div>
            <div class="card-body card-body-temple">
                <div class="form-group">
                    @Html.LabelFor(m => m.Restaurant.ZipCode, "Zip Code", new { @class = "form-label-temple" })
                    @Html.TextBoxFor(m => m.Restaurant.ZipCode, new { @class = "form-control-temple", placeholder = "Enter zip code" })
                </div>
            </div>
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn btn-temple btn-lg mt-4">Update Restaurant</button>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="text-center">
                <span class="text-danger">@ViewBag.Message</span>
            </div>
        }
    }
</div>

@section Scripts {
    <!-- Scripts are already included in _Layout.cshtml -->
    <!-- Add any page-specific scripts here if needed -->
}
}