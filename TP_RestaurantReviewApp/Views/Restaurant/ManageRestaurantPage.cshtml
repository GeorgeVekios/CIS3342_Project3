@model TP_RestaurantReviewApp.Models.ManageRestaurantPageViewModel
@{
    Layout = null;
    ViewData["Title"] = "ForkScore - Manage Restaurant";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2>Edit Restaurant</h2>

        @using (Html.BeginForm("ManageRestaurantPage", "RestaurantController", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.Restaurant.RestaurantID) <!-- Hidden field for RestaurantID -->

            <div class="form-group">
                @Html.LabelFor(m => m.Restaurant.Name, "Restaurant Name")
                @Html.TextBoxFor(m => m.Restaurant.Name, new { @class = "form-control", @Value = Model.Restaurant.Name })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Restaurant.StreetAddress, "Address Line 1")
                @Html.TextBoxFor(m => m.Restaurant.StreetAddress, new { @class = "form-control", @Value = Model.Restaurant.StreetAddress })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Restaurant.City, "City")
                @Html.TextBoxFor(m => m.Restaurant.City, new { @class = "form-control", @Value = Model.Restaurant.City })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Restaurant.State, "State")
                @Html.DropDownListFor(m => m.Restaurant.State, new SelectList(new[]
                         {
            new SelectListItem { Text = "PA", Value = "PA" },
            new SelectListItem { Text = "NY", Value = "NY" }
            }, "Value", "Text", Model.Restaurant.State), "Select State", new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Restaurant.ZipCode, "Zip Code")
                @Html.TextBoxFor(m => m.Restaurant.ZipCode, new { @class = "form-control", @Value = Model.Restaurant.ZipCode })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Restaurant.Cuisine, "Cuisine")
                @Html.DropDownListFor(m => m.Restaurant.Cuisine, new SelectList(new[]
                         {
            new SelectListItem { Text = "Italian", Value = "Italian" },
            new SelectListItem { Text = "Mexican", Value = "Mexican" },
            new SelectListItem { Text = "American Grill", Value = "American Grill" }
            }, "Value", "Text", Model.Restaurant.Cuisine), "Select Cuisine", new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Restaurant.HoursOfOperation, "Hours of Operation")
                @Html.TextAreaFor(m => m.Restaurant.HoursOfOperation, new { @class = "form-control", rows = "3", @Value = Model.Restaurant.HoursOfOperation })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Restaurant.PhoneNum, "Phone Number")
                @Html.TextBoxFor(m => m.Restaurant.PhoneNum, new { @class = "form-control", type = "tel", @Value = Model.Restaurant.PhoneNum })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Restaurant.Email, "Email")
                @Html.TextBoxFor(m => m.Restaurant.Email, new { @class = "form-control", type = "email", @Value = Model.Restaurant.Email })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Restaurant.WebsiteURL, "Website URL")
                @Html.TextBoxFor(m => m.Restaurant.WebsiteURL, new { @class = "form-control", type = "url", @Value = Model.Restaurant.WebsiteURL })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Restaurant.Description, "Marketing Description")
                @Html.TextAreaFor(m => m.Restaurant.Description, new { @class = "form-control", rows = "5", @Value = Model.Restaurant.Description })
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Update Restaurant</button>
            </div>

            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="text-center">
                    <span class="text-danger">@ViewBag.Message</span>
                </div>
            }
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>