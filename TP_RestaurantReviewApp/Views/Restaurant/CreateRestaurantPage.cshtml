@model TP_RestaurantReviewApp.Models.CreateRestaurantPageViewModel
@{
	Layout = null;
	ViewData["Title"] = "ForkScore - Create New Restaurant";
}
<DOCTYPE html>
    <html>
    <head>
        <title>@ViewData["Title"]</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
	<body>
		<div class="container">
			<h2>Create a New Restaurant</h2>

			@using (Html.BeginForm("CreateRestaurantPageViewModel", "Restaurant", FormMethod.Post))
			{
				<div class="form-group">
					@Html.LabelFor(m => m.Restaurant.Name, "Restaurant Name")
					@Html.TextBoxFor(m => m.Restaurant.Name, new { @class = "form-control" })
				</div>

				<div class="form-group">
					@Html.LabelFor(m => m.Restaurant.StreetAddress, "Address Line 1")
					@Html.TextBoxFor(m => m.Restaurant.StreetAddress, new { @class = "form-control" })
				</div>

				<div class="form-group">
					@Html.LabelFor(m => m.Restaurant.City, "City")
					@Html.TextBoxFor(m => m.Restaurant.City, new { @class = "form-control" })
				</div>

				<div class="form-group">
					@Html.LabelFor(m => m.Restaurant.State, "State")
					@Html.DropDownListFor(m => m.Restaurant.State, new SelectList(new[]
										{
				new SelectListItem { Text = "PA", Value = "PA" },
				new SelectListItem { Text = "NY", Value = "NY" }
				}, "Value", "Text"), "Select State", new { @class = "form-control" })
				</div>

				<div class="form-group">
					@Html.LabelFor(m => m.Restaurant.ZipCode, "Zip Code")
					@Html.TextBoxFor(m => m.Restaurant.ZipCode, new { @class = "form-control" })
				</div>

				<div class="form-group">
					@Html.LabelFor(m => m.Restaurant.Cuisine, "Cuisine")
					@Html.DropDownListFor(m => m.Restaurant.Cuisine, new SelectList(new[]
										{
				new SelectListItem { Text = "Italian", Value = "Italian" },
				new SelectListItem { Text = "Mexican", Value = "Mexican" },
				new SelectListItem { Text = "American Grill", Value = "American Grill" }
				}, "Value", "Text"), "Select Cuisine", new { @class = "form-control" })
				</div>

				<div class="form-group">
					@Html.LabelFor(m => m.Restaurant.HoursOfOperation, "Hours of Operation")
					@Html.TextAreaFor(m => m.Restaurant.HoursOfOperation, new { @class = "form-control", rows = "3" })
				</div>

				<div class="form-group">
					@Html.LabelFor(m => m.Restaurant.PhoneNum, "Phone Number")
					@Html.TextBoxFor(m => m.Restaurant.PhoneNum, new { @class = "form-control", type = "tel" })
				</div>

				<div class="form-group">
					@Html.LabelFor(m => m.Restaurant.Email, "Email")
					@Html.TextBoxFor(m => m.Restaurant.Email, new { @class = "form-control", type = "email" })
				</div>

				@* ownerName to be added later *@
				@* <div class="form-group">
                @Html.LabelFor(m => m., "Owner Name")
                @Html.TextBoxFor(m => m.Owner, new { @class = "form-control" })
            </div> *@

				<div class="form-group">
					@Html.LabelFor(m => m.Restaurant.WebsiteURL, "Website URL")
					@Html.TextBoxFor(m => m.Restaurant.WebsiteURL, new { @class = "form-control", type = "url" })
				</div>

				@* social media to be handled later *@
				@* <div class="form-group">
                @Html.LabelFor(m => m.Social, "Social Media URL")
                @Html.TextBoxFor(m => m.Social, new { @class = "form-control", type = "url" })
            </div> *@

				<div class="form-group">
					@Html.LabelFor(m => m.Restaurant.Description, "Marketing Description")
					@Html.TextAreaFor(m => m.Restaurant.Description, new { @class = "form-control", rows = "5" })
				</div>

				<div class="form-group text-center">
					<button type="submit" class="btn btn-primary">Create Restaurant</button>
				</div>

				@if (ViewBag.Message != null)
				{
					<div class="text-center">
						<span class="text-danger">@ViewBag.Message</span>
					</div>
				}
			}
		</div>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
	</body>
</html>
</DOCTYPE>
