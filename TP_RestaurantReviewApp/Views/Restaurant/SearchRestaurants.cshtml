@model List<Restaurant>
@{
    Layout = null;
    ViewData["Title"] = "ForkScore - Find Restaurants";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="search-header">
        <div class="container">
            <h1 class="display-4 text-center">Find Your Perfect Restaurant</h1>
            <p class="text-center text-muted">Browse and filter our collection of restaurants</p>
        </div>
    </div>

    <div class="container">
        <div class="search-form mb-4">
            <form asp-action="SearchRestaurants" method="get">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Cuisine</label>
                        @foreach (string cuisine in (List<string>)ViewBag.Cuisines)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="cuisines" value="@cuisine" id="@cuisine.Replace(" ", "")">
                                <label class="form-check-label" for="@cuisine.Replace(" ", "")">@cuisine</label>
                            </div>
                        }
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" name="city" placeholder="City">
                    </div>
                    <div class="col-md-3">
                        <input type="text" class="form-control" name="state" placeholder="State">
                    </div>
                    <div class="col-md-2 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">Search</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="row">
            @if (Model.Count == 0)
            {
                <div class="col-12 text-center">
                    <p class="text-muted">No restaurants found matching your criteria.</p>
                </div>
            }
            else
            {
                @foreach (Restaurant restaurant in Model)
                {
                    <div class="col-md-4">
                        <div class="card restaurant-card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="/Restaurant/ViewRestaurantProfile/@restaurant.RestaurantID" class="text-decoration-none">
                                        @restaurant.Name
                                    </a>
                                </h5>
                                <p class="card-text text-muted">
                                    @restaurant.Cuisine • @restaurant.City, @restaurant.State
                                </p>
                                <div class="mb-2">
                                    <span class="rating-stars">
                                        @for (int i = 0; i < Math.Floor(restaurant.OverallRating); i++)
                                        {
                                            <span>★</span>
                                        }
                                    </span>
                                    <span class="text-muted">(@restaurant.OverallRating.ToString("F1"))</span>
                                </div>
                                <p class="card-text">
                                    @restaurant.StreetAddress
                                    <br />
                                    @restaurant.PhoneNum
                                </p>
                                <p class="card-text text-muted small">
                                    @restaurant.Description.Substring(0, Math.Min(100, restaurant.Description.Length))...
                                </p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>




