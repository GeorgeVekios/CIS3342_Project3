@model TP_RestaurantReviewApp.Models.RestaurantProfileViewModel

@{
    Layout = null;
    ViewData["Title"] = "ForkScore - Restaurant Profile";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">@Model.Restaurant.Name's Profile</h1>

        <div class="row">
            <div class="col-md-6">
                <h4>Restaurant Details</h4>
                <ul class="list-group">
                    <li class="list-group-item"><strong>Cuisine:</strong> @Model.Restaurant.Cuisine</li>
                    <li class="list-group-item"><strong>Address:</strong> @Model.Restaurant.StreetAddress, @Model.Restaurant.City, @Model.Restaurant.State, @Model.Restaurant.ZipCode</li>
                    <li class="list-group-item"><strong>Phone:</strong> @Model.Restaurant.PhoneNum</li>
                    <li class="list-group-item"><strong>Email:</strong> @Model.Restaurant.Email</li>
                    <li class="list-group-item"><strong>Website:</strong> <a href="@Model.Restaurant.WebsiteURL" target="_blank">@Model.Restaurant.WebsiteURL</a></li>
                </ul>
            </div>

            <div class="col-md-6">
                <h4>Restaurant Ratings</h4>
                <ul class="list-group">
                    <li class="list-group-item"><strong>Overall Rating:</strong> @Model.Restaurant.OverallRating</li>
                    <li class="list-group-item"><strong>Food Rating:</strong> @Model.Restaurant.AvgFoodRating</li>
                    <li class="list-group-item"><strong>Service Rating:</strong> @Model.Restaurant.AvgServiceRating</li>
                    <li class="list-group-item"><strong>Atmosphere Rating:</strong> @Model.Restaurant.AvgAtmosphereRating</li>
                    <li class="list-group-item"><strong>Price Rating:</strong> @Model.Restaurant.AvgPriceRating</li>
                </ul>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <h4>Hours of Operation</h4>
                <p>@Model.Restaurant.HoursOfOperation</p>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <h4>Description</h4>
                <p>@Model.Restaurant.Description</p>
            </div>
        </div>

        @if (Model.ImageGallery != null && Model.ImageGallery.Any())
        {
            <div class="row mt-4">
                <div class="col-md-12">
                    <h4>Gallery</h4>
                    <div class="row">
                        @foreach (var image in Model.ImageGallery)
                        {
                            <div class="col-md-3 mb-3">
                                <img src="@image.FileLocation" alt="@image.Caption" class="img-fluid rounded" />
                                @if (!string.IsNullOrEmpty(image.Caption))
                                {
                                    <p class="text-center mt-1">@image.Caption</p>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        @if (Model.ReviewList != null && Model.ReviewList.Any())
        {
            <div class="row mt-4">
                <div class="col-md-12">
                    <h4>Reviews</h4>
                    @foreach (var review in Model.ReviewList)
                    {
                        <div class="card mb-3">
                            <div class="card-header">
                                <h5 class="card-title mb-0">@review.ReviewTitle</h5>
                            </div>
                            <div class="card-body">
                                <p class="card-text">@review.ReviewBody</p>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item"><strong>Food Rating:</strong> @review.FoodRating</li>
                                    <li class="list-group-item"><strong>Service Rating:</strong> @review.ServiceRating</li>
                                    <li class="list-group-item"><strong>Atmosphere Rating:</strong> @review.AtmosphereRating</li>
                                    <li class="list-group-item"><strong>Price Rating:</strong> @review.PriceRating</li>
                                </ul>
                            </div>
                            <div class="card-footer text-muted">
                                <p class="mb-1">Visited: @review.VisitDate.ToString("MMMM dd, yyyy")</p>
                                <p class="mb-0">Posted: @review.CreatedAt.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        @if (Model.SocialMediaList != null && Model.SocialMediaList.Any())
        {
            <div class="row mt-4">
                <div class="col-md-12">
                    <h4>Social Media</h4>
                    <ul class="list-group list-group-horizontal">
                        @foreach (var social in Model.SocialMediaList)
                        {
                            <li class="list-group-item">
                                <a href="@social.Link" target="_blank">@social.Platform</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>