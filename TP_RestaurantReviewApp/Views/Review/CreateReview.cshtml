@model TP_RestaurantReviewApp.Models.CreateReviewViewModel
@{
    Layout = "_Layout"; // Use the layout
    ViewData["Title"] = "ForkScore - Create Review";
}

<div class="container py-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white p-4">
            <h2 class="mb-0">Share Your Dining Experience</h2>
            <small class="text-light">Tell us about your recent restaurant visit</small>
        </div>

        <div class="card-body p-4">
            <form asp-action="CreateReview" asp-controller="Review" method="post">
                <input type="hidden" asp-for="@Model.Review.CreatedAt" />

                <div class="row g-3">
                    <div class="col-md-12">
                        <label class="form-label fw-bold text-muted">Where did you dine?</label>
                        <select asp-for="@Model.Review.RestaurantID" class="form-select form-select-lg" required>
                            <option value="">Choose a restaurant...</option>
                            @foreach (var item in ViewBag.RestaurantList)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-12">
                        <label class="form-label fw-bold text-muted">Review Title</label>
                        <input asp-for="@Model.Review.ReviewTitle" class="form-control" placeholder="Give your review a catchy title" required />
                    </div>

                    <div class="col-md-12">
                        <label class="form-label fw-bold text-muted">Your Experience</label>
                        <textarea asp-for="@Model.Review.ReviewBody" class="form-control" rows="4" placeholder="Share your thoughts about the meal, service, and more..." required></textarea>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-bold text-muted">Food Quality</label>
                        <select asp-for="@Model.Review.FoodRating" class="form-select" required>
                            <option value="">Rate 1-5</option>
                            <option value="1">1 - Poor</option>
                            <option value="2">2 - Fair</option>
                            <option value="3">3 - Good</option>
                            <option value="4">4 - Great</option>
                            <option value="5">5 - Excellent</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-bold text-muted">Service</label>
                        <select asp-for="@Model.Review.ServiceRating" class="form-select" required>
                            <option value="">Rate 1-5</option>
                            <option value="1">1 - Poor</option>
                            <option value="2">2 - Fair</option>
                            <option value="3">3 - Good</option>
                            <option value="4">4 - Great</option>
                            <option value="5">5 - Excellent</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-bold text-muted">Atmosphere</label>
                        <select asp-for="@Model.Review.AtmosphereRating" class="form-select" required>
                            <option value="">Rate 1-5</option>
                            <option value="1">1 - Poor</option>
                            <option value="2">2 - Fair</option>
                            <option value="3">3 - Good</option>
                            <option value="4">4 - Great</option>
                            <option value="5">5 - Excellent</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label fw-bold text-muted">Value</label>
                        <select asp-for="@Model.Review.PriceRating" class="form-select" required>
                            <option value="">Rate 1-5</option>
                            <option value="1">1 - Poor</option>
                            <option value="2">2 - Fair</option>
                            <option value="3">3 - Good</option>
                            <option value="4">4 - Great</option>
                            <option value="5">5 - Excellent</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold text-muted">When did you visit?</label>
                        <input asp-for="@Model.Review.VisitDate" class="form-control" type="date" required />
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-primary btn-lg px-5">
                        <i class="bi bi-send me-2"></i>Submit Review
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap JS is already included in _Layout.cshtml -->
    <!-- Add Bootstrap Icons for the submit button icon -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
}