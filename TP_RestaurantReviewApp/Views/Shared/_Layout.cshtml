@{
    bool isLoggedIn = Context.Session.GetString("Username") != null;
    string username = Context.Session.GetString("Username");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ForkScore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TP_RestaurantReviewApp.styles.css" asp-append-version="true" />
    <style>
        .temple-navbar {
            background-color: #990000 !important;
        }

        .temple-navbar .nav-link,
        .temple-navbar .navbar-brand,
        .temple-navbar .dropdown-toggle {
            color: #fff !important;
        }

        .temple-navbar .nav-link:hover,
        .temple-navbar .navbar-brand:hover {
            text-decoration: underline;
        }

        .btn-temple {
            background-color: #990000;
            color: #fff;
            border: none;
        }

        .btn-temple-outline {
            border: 2px solid #990000;
            color: #990000 !important;
            background-color: #fff;
        }

        .btn-temple-outline:hover {
            background-color: #990000;
            color: #fff;
        }

        footer {
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm temple-navbar border-bottom shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ForkScore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Restaurant" asp-action="SearchRestaurants">Search Restaurants</a>
                        </li>
                    </ul>

                    <div class="d-flex ms-auto">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item dropdown list-unstyled">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @username
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-controller="Restaurant" asp-action="SearchRestaurants">Find Restaurants</a></li>
                                    <li><a class="dropdown-item" asp-controller="Reservation" asp-action="CreateReservationPage">Make Reservation</a></li>
                                    <li><a class="dropdown-item" asp-controller="Review" asp-action="CreateReview">Create Review</a></li>
                                    <li><a class="dropdown-item" asp-controller="Review" asp-action="ManageReview">Manage Reviews</a></li>
                                    <li><a class="dropdown-item" asp-controller="Restaurant" asp-action="CreateRestaurantPage">Add Restaurant</a></li>
                                    <li><a class="dropdown-item" asp-controller="Reservation" asp-action="ManageReservationPage">Manage Reservations</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="Logout">Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <a class="btn btn-temple-outline me-2" asp-controller="Account" asp-action="Login">Login</a>
                            <a class="btn btn-temple" asp-controller="Account" asp-action="Register">Register</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            © 2025 - TP_RestaurantReviewApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>